<?xml version="1.0" encoding="UTF-8"?>  
<something-else-entirely>
	<proxool>
		<alias>lottery</alias>
		<driver-url>jdbc:jtds:sqlserver://127.0.0.1:1433;DatabaseName=lottery;autoReconnect=true</driver-url>
		<driver-class>net.sourceforge.jtds.jdbc.Driver</driver-class>
		<driver-properties>
			<property name="user" value="sa"/>
			<property name="password" value="   "/>
			<property name="useUnicode" value="true"/>
			<property name="characterEncoding" value="UTF-8"/>
		</driver-properties>
		<!-- 最小连接数 -->
		<minimum-connection-count>10</minimum-connection-count>
		<!-- 最大连接数 -->
		<maximum-connection-count>30</maximum-connection-count>
		<!-- 空闲连接数 -->
		<prototype-count>5</prototype-count>
		<!-- 最大的等待请求数 -->       
		<simultaneous-build-throttle>100</simultaneous-build-throttle>
		<!-- 最大连接时间 -->
		<maximum-active-time>1800000</maximum-active-time>	
		<!-- Test SQL -->
		<house-keeping-test-sql>SELECT 1 FROM DUAL</house-keeping-test-sql>
	</proxool>
</something-else-entirely> 

